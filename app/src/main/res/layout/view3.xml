<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_color">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"/>

            <Button
                android:id="@+id/view3_album_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/album"
                />

            <Button
                android:id="@+id/view3_camera_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:drawableBottom="@drawable/camera"
                />
        </LinearLayout>


        <ImageView
            android:id="@+id/view3_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add_photo"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <EditText
                android:id="@+id/view3_tag_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColorHint="#949FA8"
                android:hint="输入标签"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="40dp"
                />

            <EditText
                android:id="@+id/view3_content_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:textColorHint="#949FA8"
                android:hint = "写下对此题的感想"
                android:textSize="20sp"
                android:gravity="top"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

               <ImageButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:scaleX="1.2"
                   android:scaleY="1.2"
                   android:src="@drawable/sendb"
                   android:id="@+id/view3_send_button"
                   android:background="@android:color/transparent"
                   />


            </LinearLayout>



        </LinearLayout>



</LinearLayout>
