<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    >


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="206dp"
        android:orientation="horizontal"
        android:id="@+id/textInputLayout">

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/textInputLayout2">

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/login_cancel_button"
        android:layout_height="35dp"
        android:background="@drawable/buttonnew2"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="Cancle"
        android:textSize="15sp"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:layout_below="@+id/login_ensure_button"
        android:layout_alignStart="@+id/login_ensure_button"
        android:layout_width="100dp" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_inputPassword_editText"
        android:textColor="#B2B6B9"
        android:textColorHint="#B2B6B9"
        android:layout_weight="2"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/login_inputUser_editText"
        android:layout_alignStart="@+id/login_inputUser_editText" />

    <Button
        android:id="@+id/login_ensure_button"
        android:layout_height="35dp"
        android:background="@drawable/buttonnew2"
        android:textColor="#FFFFFF"
        android:text="Ok"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="58dp"
        android:layout_width="100dp"
        android:layout_below="@+id/login_inputPassword_editText"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_inputUser_editText"
        android:textColor="#B2B6B9"
        android:hint="username"
        android:textColorHint="#B2B6B9"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:layout_marginTop="107dp"
        android:layout_below="@+id/textInputLayout2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
