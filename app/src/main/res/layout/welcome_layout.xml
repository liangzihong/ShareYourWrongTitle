<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/welcome_signup_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="center"
            android:text="注册"
            android:textColor="#3B5E6A"
            android:background="@drawable/buttonnew"
            android:layout_marginBottom="81dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/welcome_login_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#3B5E6A"
            android:gravity="center"
            android:text="登录"
            android:background="@drawable/buttonnew"
            android:layout_marginBottom="25dp"
            android:layout_above="@+id/welcome_signup_button"
            android:layout_alignStart="@+id/welcome_signup_button" />


    </RelativeLayout>



</LinearLayout>
